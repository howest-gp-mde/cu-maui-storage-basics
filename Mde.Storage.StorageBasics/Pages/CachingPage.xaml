<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Mde.Storage.StorageBasics.Pages.CachingPage"
             xmlns:ffimageloading="clr-namespace:FFImageLoading.Maui;assembly=FFImageLoading.Maui"
             Title="CachingPage">
    <VerticalStackLayout>
        <Label Text="Built-in MAUI approach (does not work on Windows)"></Label>
        <Image>
            <Image.Source>
                <UriImageSource 
                    Uri="https://www.howest.be/fs/styles/full_banner/public/images/49314368393_367b9c7282_k.jpg"
                    CachingEnabled="True"
                    CacheValidity="1.10:00:00"
                    />
            </Image.Source>
        </Image>

        <Label Text="Third party approaching using FFImageLoading.Maui:"></Label>
        <ffimageloading:CachedImage CacheDuration="00:00:30" Source="https://www.howest.be/fs/styles/full_banner/public/images/49314368393_367b9c7282_k.jpg" />

    </VerticalStackLayout>
</ContentPage>